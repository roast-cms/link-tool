{
  "name": "@roast-cms/links",
  "version": "0.5.5",
  "description": "A Node.js API for managing affiliate links.",
  "main": "dist/index.js",
  "repository": "https://github.com/roast-cms/links.git",
  "author": "dmitrizzle <8587882+dmitrizzle@users.noreply.github.com>",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">=16.x || 14.x"
  },
  "scripts": {
    "audit:fix": "npx yarn-audit-fix",
    "build": "rm -rf dist && tsc",
    "dev": "tsc-watch --onSuccess \"ts-node ./dev-server\"",
    "dev:example": "tsc-watch --onSuccess \"ts-node ./example-server\"",
    "lint": "eslint \"./**/*.ts\"",
    "lint:fix": "eslint --fix \"./**/*.ts\"",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "prepare": "husky install && yarn build"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "connect-redis": "^6.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "jest": "^27.3.1",
    "mongoose": "^6.0.12",
    "recachegoose": "^9.0.0",
    "redis": "^3.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@roast-cms/links": "^0.2.1",
    "@types/bluebird": "^3.5.36",
    "@types/body-parser": "^1.19.2",
    "@types/connect-redis": "^0.0.17",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/redis": "^2.8.32",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "body-parser": "^1.20.1",
    "eslint": "^8.1.0",
    "husky": "^7.0.4",
    "tsc-watch": "^4.2.9"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts)?$": "babel-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.[t]s?(x)",
      "**/?(*.)+(spec|test).[t]s?(x)"
    ]
  }
}
